<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/right_red_arrow"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
    <View android:layout_height="wrap_content"
        android:layout_width="5dp"
        android:id="@+id/spacer"
        android:layout_marginStart="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/text_group"
        android:background="@color/product_card_primary_dark_blue"/>
    <LinearLayout
        android:id="@+id/text_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_toEndOf="@+id/spacer"
        android:layout_toStartOf="@+id/arrow">
        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/title_tv"
            android:textSize="20sp"
            android:textColor="@color/black_opacity_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/details_tv"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_opacity_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/price_tv"
            android:textColor="@color/black_opacity_90"
            android:textSize="20sp"
            app:vodafoneTextStyle="vodafoneRGBD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/period_tv"
            android:textColor="@color/black_opacity_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/extra_benefits_tv"
            android:visibility="gone"
            android:textColor="@color/black_opacity_90"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>