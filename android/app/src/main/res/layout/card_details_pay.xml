<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pay_card_layout"
    android:paddingBottom="20dp">
    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/card_title"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:text="SUPER RED 25 PROMO +500 MB +BONUS ROAMING"
        android:textColor="@color/blackNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        font:vodafoneTextStyle="3"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        />

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/card_body"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/blackNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        font:vodafoneTextStyle="vodafoneRG"

        />
    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/details_tv"
        android:layout_marginTop="5dp"
        android:textColor="@color/black_opacity_90"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/extra_benefits_tv"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:textColor="@color/black_opacity_90"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/separator_before_price_plan"
        android:background="#33444444"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/see_price_plan_details_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        >
        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/see_details_tv"
            android:textColor="@color/black_opacity_90"
            android:layout_marginStart="10dp"
            android:text="Vezi detalii abonament"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/arrow"
            android:gravity="center_vertical"
            android:minHeight="32dp"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right_red_arrow_down"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"/>
        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/price_plan_details_html"
            android:textSize="@dimen/normal_card_inside_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blackNormal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@+id/arrow"
            android:layout_below="@+id/see_details_tv"
            />

        <ro.vodafone.mcare.android.ui.views.CardErrorLayout
            android:id="@+id/price_plan_details_error_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/see_details_tv">

        </ro.vodafone.mcare.android.ui.views.CardErrorLayout>

    </RelativeLayout>
    <View
        android:id="@+id/separator_price_plan_and_phone_price"
        android:background="#33444444"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_height="1dp"/>

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/price_phone_tv"
        android:textSize="@dimen/normal_card_inside_text"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blackNormal"
        android:gravity="center"
        />
    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/price_service_tv"
        android:textSize="@dimen/normal_card_inside_text"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blackNormal"
        android:gravity="center"

        />

    <ro.vodafone.mcare.android.ui.views.buttons.VodafoneButton
        android:id="@+id/card_primaryButton"
        style="@style/OverlayPrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:text="Adaugă în coş"
        android:layout_marginTop="@dimen/general_margin" />

    <ro.vodafone.mcare.android.ui.views.buttons.VodafoneButton
        android:id="@+id/card_secondaryButton"
        android:text="Vezi alte prețuri de oferte"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        style="@style/CardSecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>