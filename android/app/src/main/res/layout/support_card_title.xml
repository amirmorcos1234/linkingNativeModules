<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:clickable="false"
    android:orientation="horizontal"
    android:paddingEnd="10dp">

    <ro.vodafone.mcare.android.ui.DynamicColorImageView
        android:id="@+id/redBubble"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:clickable="false"
        android:visibility="invisible"
        app:srcCompat="@drawable/support24_7_red" />

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/redBubble"
        android:clickable="false"
        android:text="Asistență"
        customAttrs:vodafoneTextStyle="vodafoneRG"
        android:textColor="@color/messageText"
        android:textSize="14sp" />

    <ro.vodafone.mcare.android.ui.DynamicColorImageView
        android:id="@+id/triangle_view"
        android:layout_alignParentBottom="true"
        android:layout_width="24dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/faq_search_button"
        android:scaleY="-1"
        android:visibility="invisible"
        android:src="@drawable/black_triangle"
        customAttrs:drawableColor="@color/support_window_grey" />


    <ro.vodafone.mcare.android.ui.DynamicColorImageView
        android:id="@+id/pc_button"
        android:layout_width="24dp"
        android:layout_centerInParent="true"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/minimize_button"
        android:src="@drawable/desktop_48" />

    <ro.vodafone.mcare.android.ui.DynamicColorImageView
        android:id="@+id/minimize_button"
        android:layout_width="24dp"
        android:layout_centerInParent="true"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/faq_search_button"
        android:src="@drawable/minus_or_less_48" />

    <ro.vodafone.mcare.android.ui.DynamicColorImageView
        android:layout_centerInParent="true"
        android:id="@+id/faq_search_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/close_button"
        android:src="@drawable/search_48" />


    <ro.vodafone.mcare.android.ui.DynamicColorImageView
        android:id="@+id/close_button"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:src="@drawable/close_48" />
</RelativeLayout>

