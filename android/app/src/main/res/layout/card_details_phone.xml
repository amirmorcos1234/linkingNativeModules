<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_group_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/chooseColor_tv"
        android:textSize="17sp"
        android:paddingEnd="@dimen/general_margin"
        android:paddingStart="@dimen/general_margin"
        android:textColor="@color/black_opacity_90"
        android:text="Alege culoarea"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.GridLayout
        android:id="@+id/color_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/general_margin"
        android:paddingStart="@dimen/general_margin"
        grid:columnOrderPreserved="true"
        grid:columnCount="4"
        android:stretchMode="columnWidth">
    </android.support.v7.widget.GridLayout>

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/chooseStorage_tv"
        android:paddingEnd="@dimen/general_margin"
        android:paddingStart="@dimen/general_margin"
        android:paddingBottom="2dp"
        android:textColor="@color/black_opacity_90"
        android:text="Alege modelul"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/storage_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/general_margin"
        android:paddingStart="@dimen/general_margin"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        grid:columnOrderPreserved="true"
        grid:columnCount="3"
        android:stretchMode="columnWidth"
        android:clipToPadding="false">

    </android.support.v7.widget.GridLayout>

    <RelativeLayout
        android:id="@+id/text_group_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_marginTop="10dp"
        android:background="@color/card_background_gray"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/info_imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_check_circle_greeen_24dp" />

        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/info_imageView"
            android:text="ÃŽn stoc"
            android:textColor="@color/black_opacity_90"
            android:textSize="17sp" />

    </RelativeLayout>
</LinearLayout>