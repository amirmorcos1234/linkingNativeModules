<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pay_bill_white_color"
        android:orientation="vertical"
        >

        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/textTop"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:textAlignment="center"
            android:textColor="@color/blackNormal"
            customAttrs:vodafoneTextStyle="vodafoneRGBD"
            android:text="Costuri în afara planului tău"
            />

        <RelativeLayout
            android:id="@+id/iconGroup"
            android:layout_below="@id/textTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_circle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle"/>

            <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                android:id="@+id/textIcon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                customAttrs:vodafoneTextStyle="vodafoneRGBD"
                android:textColor="@color/whiteNormalTextColor"
                android:text="$25.00 "

                />

        </RelativeLayout>


        <View
            android:id="@+id/purpleline"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iconGroup"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>