                    android:textSize="@dimen/login_page_labels_text_size" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="18dp"
                android:layout_height="10dp"
                android:layout_marginLeft="290dp"
                android:background="@drawable/black_triangle"></RelativeLayout>

