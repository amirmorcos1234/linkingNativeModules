            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pay_bill_bottom_margin"
            android:background="@drawable/border_shadow"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pay_bill_container_vertical_pading"
            android:paddingLeft="@dimen/pay_bill_container_horizontal_pading"
            android:paddingRight="@dimen/pay_bill_container_horizontal_pading"
            android:paddingTop="@dimen/pay_bill_container_vertical_pading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pay_bill_container_layout_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="53dp"
                            android:layout_weight="4"
                            android:weightSum="1">

                            <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                                android:id="@+id/privacy_policy_title2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/pay_bill_text_margin"
                                android:text="@string/optimization_title"
                                android:textColor="@color/pay_bill_bold_text_color"
                                android:textSize="@dimen/pay_bill_text_size"
                                customAttrs:defaultBorderColor="gray"
                                customAttrs:vodafoneTextStyle="vodafoneRG" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ro.vodafone.mcare.android.widget.SwitchButton.SwitchButton
                                android:id="@+id/settingsCardButtonOptimization"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:theme="@style/Color1SwitchStyle" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pay_bill_container_layout_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separator_line_height"
                        android:background="@color/pay_bill_separator_line_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pay_bill_container_layout_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/pay_bill_view_elements_vertical_margin">

                        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                            android:id="@+id/vodafoneTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/pay_bill_text_margin"
                            android:layout_marginTop="@dimen/pay_bill_text_margin"
                            android:text="@string/optimization_information"
                            android:textColor="@color/pay_bill_bold_text_color"
                            android:textSize="@dimen/pay_bill_text_size"
                            customAttrs:vodafoneTextStyle="vodafoneRG" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Separator line-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pay_bill_container_layout_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/separator_line_height"
                        android:background="@color/pay_bill_separator_line_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pay_bill_container_layout_margin"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                            android:id="@+id/lvExp2"
                            android:layout_width="wrap_content"
                            android:layout_toStartOf="@+id/extend_optimization"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/pay_bill_text_margin"
                            android:orientation="horizontal"
                            android:text="@string/optimization_message"
                            android:textColor="@color/pay_bill_bold_text_color"
                            android:textSize="@dimen/pay_bill_text_size"
                            customAttrs:vodafoneTextStyle="vodafoneRG" />

                        <ImageView
                            android:id="@+id/extend_optimization"
                            android:layout_width="@dimen/settings_red_arrow_heigth"
                            android:layout_height="@dimen/settings_red_arrow_heigth"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/right_red_arrow_down" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/toBeShown2SP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                            android:id="@+id/expandableCardList2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:animateLayoutChanges="true"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@null"
                            android:groupIndicator="@null"
                            android:listSelector="@android:color/transparent"
                            android:text="@string/optimization_information_expandable" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

