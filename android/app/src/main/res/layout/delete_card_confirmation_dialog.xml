<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_background"
    android:orientation="vertical"
    android:padding="@dimen/overlay_regular_border">

    <RelativeLayout
        android:id="@+id/select_dialog_tittle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp">

        <ImageView
            android:id="@+id/overlayDismissButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            customAttrs:srcCompat="@drawable/close_48_white" />

        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/overlayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="45dp"
            android:text="@string/delete_card_confirmation_dialog_title"
            android:textColor="@color/pay_bill_white_color"
            android:textSize="@dimen/overlay_title_text_size"
            customAttrs:vodafoneTextStyle="vodafoneRG" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        customAttrs:srcCompat="@drawable/ic_card_circle" />

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/delete_confirmation_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/delete_confirmation"
        android:textColor="@color/pay_bill_white_color"
        android:textSize="@dimen/button_text_size"
        customAttrs:vodafoneTextStyle="vodafoneRG" />

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:textColor="@color/pay_bill_white_color"
        android:textSize="@dimen/button_text_size"
        customAttrs:vodafoneTextStyle="vodafoneRGBD" />

    <ro.vodafone.mcare.android.ui.views.buttons.VodafoneButton
        android:id="@+id/button_delete"
        style="@style/OverlayPrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/delete"
        android:textSize="@dimen/button_text_size"
        customAttrs:vodafoneTextStyle="vodafoneRG" />

    <ro.vodafone.mcare.android.ui.views.buttons.VodafoneButton
        android:id="@+id/button_cancel"
        style="@style/OverlaySecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:text="@string/anuleaza"
        android:textSize="@dimen/button_text_size"
        customAttrs:vodafoneTextStyle="vodafoneRG" />
</LinearLayout>