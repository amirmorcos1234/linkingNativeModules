<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background_light_gray"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shadow"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="@dimen/pay_bill_container_vertical_pading"
        android:paddingLeft="@dimen/pay_bill_container_horizontal_pading"
        android:paddingRight="@dimen/pay_bill_container_horizontal_pading"
        android:paddingTop="@dimen/pay_bill_container_vertical_pading">


        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/discount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_opacity_90"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/discount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textColor="@color/black_opacity_90"
            android:layout_alignParentTop="true" />


        <!-- Separator line-->
        <View
            android:id="@+id/separator_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_line_height"
            android:layout_below="@+id/discount_label"
            android:background="@color/pay_bill_separator_line_color" />

        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/total_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:text="dummy"
            android:layout_below="@+id/separator_line" />

        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/total_amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:layout_alignParentEnd="true"
            android:text="dummy"
            android:layout_below="@+id/separator_line" />

        <!-- Separator line-->
        <View
            android:id="@+id/second_separator_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_line_height"
            android:layout_below="@+id/total_amount_label"
            android:background="@color/pay_bill_separator_line_color" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_below="@+id/second_separator_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                android:id="@+id/exchange_rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_button_color"
                android:text="dummy"
                 />

            <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                android:id="@+id/exchange_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_button_color"
                android:text="dummy" />


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>