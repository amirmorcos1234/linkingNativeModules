<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/voucher_campaign_title_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Descriere campanie"
        android:textSize="@dimen/splashscreen_text_size"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/general_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_marginEnd="@dimen/general_margin" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blackNormal"
        app:layout_constraintTop_toBottomOf="@+id/voucher_campaign_title_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/separator_line"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin" />

    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/voucher_description_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="aaaaaa"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_marginBottom="@dimen/general_margin"
        android:paddingBottom="@dimen/general_margin"
        android:paddingTop="@dimen/general_margin"
        app:layout_constraintTop_toBottomOf="@+id/separator_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
        android:id="@+id/partner_link_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_chart_top_color"
        android:text="hyperlink"
        android:gravity="start"
        android:textSize="@dimen/splashscreen_text_size"
        android:paddingBottom="@dimen/general_margin"
        android:paddingTop="@dimen/general_margin"
        app:layout_constraintTop_toBottomOf="@+id/voucher_description_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/general_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/general_margin" />




</android.support.constraint.ConstraintLayout>