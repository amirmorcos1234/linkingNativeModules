<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/menu_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/avatar_images_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                fresco:placeholderImage="@drawable/phone_icon"
                android:layout_marginStart="60dp"
                fresco:roundedCornerRadius="80dp"
                fresco:roundingBorderWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                fresco:roundingBorderColor="@color/whiteNormalTextColor"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="21dp" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                fresco:placeholderImage="@drawable/phone_icon"
                fresco:roundedCornerRadius="80dp"
                fresco:roundingBorderColor="@color/whiteNormalTextColor"
                fresco:roundingBorderWidth="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="106dp"
                android:layout_height="86dp"
                android:paddingEnd="11dp"
                android:paddingStart="11dp"
                fresco:placeholderImage="@drawable/phone_icon"
                fresco:roundedCornerRadius="80dp"
                fresco:roundingBorderWidth="2dp"
                fresco:roundingBorderColor="@color/whiteNormalTextColor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                android:id="@+id/avatar_text"
                android:layout_width="0dp"
                app:layout_constraintWidth_min="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/general_margin"
                android:lines="1"
                android:maxEms="15"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/whiteNormalTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatar"
                app:layout_constraintRight_toRightOf="@+id/avatar"
                android:layout_marginRight="8dp" />
            <!--android:layout_alignBottom="@+id/avatar2"-->

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>


</RelativeLayout>