<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb">

    <RelativeLayout xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/white_background_with_start_end_shadow"
        >


        <LinearLayout
            android:id="@+id/wifi_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wifi_48" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/wifi_image_view"
            android:layout_toStartOf="@+id/store_distance"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:text="Scadenţă factură: 27 ianuarie 2017"
                android:textColor="@color/blackNormal"
                android:textSize="16sp"
                android:textStyle="bold"
                customAttrs:vodafoneTextStyle="vodafoneRG" />

            <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
                android:id="@+id/store_street_adress"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:text="Scadenţă factură: 27 ianuarie 2017"
                android:textColor="@color/blackNormal"
                android:textSize="12sp"
                customAttrs:vodafoneTextStyle="vodafoneRG" />

        </LinearLayout>


        <ro.vodafone.mcare.android.ui.views.textviews.VodafoneTextView
            android:id="@+id/store_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="24km"
            android:textColor="@color/blackNormal"
            android:textSize="16sp"
            customAttrs:vodafoneTextStyle="vodafoneRG" />


    </RelativeLayout>

</LinearLayout>