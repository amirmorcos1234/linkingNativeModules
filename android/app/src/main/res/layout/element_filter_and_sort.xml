<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="5"
    android:background="@color/general_background_light_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ro.vodafone.mcare.android.ui.views.buttons.VodafoneButton
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="Filtrează"
        android:id="@+id/filter_button"
        style="@style/CardTertiaryButton"
        android:textAllCaps="false"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp" />

    <ro.vodafone.mcare.android.ui.views.vodafoneSpinner.VodafoneSpinner
        android:layout_weight="3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/spinner"
        android:text="Sortează"
        android:layout_width="0dp"
        android:layout_height="44dp">
    </ro.vodafone.mcare.android.ui.views.vodafoneSpinner.VodafoneSpinner>


</LinearLayout>